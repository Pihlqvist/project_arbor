<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:fadingEdge="horizontal|vertical"
        android:background="@drawable/rounded_corners"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivWaterIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/water_icon" />

            <FrameLayout
                android:id="@+id/waterBufferFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivEmptyWater"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:src="@drawable/wbempty" />

                <ImageView
                    android:id="@+id/ivXmlWater"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:src="@drawable/clip_source" />
            </FrameLayout>

        </TableRow>

        <TableRow
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivSunIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sun_icon"
                android:layout_gravity="center|start"
                android:layout_marginRight="10dp"/>

            <FrameLayout
                android:id="@+id/sunBufferFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivEmptySun"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sbempty" />

                <ImageView
                    android:id="@+id/ivXmlSun"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clip_source2" />
            </FrameLayout>

        </TableRow>

        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/ivHealthIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/health_icon"
                android:layout_gravity="center|start"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tvHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="HEALTH"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/ivAgeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:src="@drawable/age_icon"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="AGE"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/ivStepsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stpes_icon"
                android:layout_gravity="center|start"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tvSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="STEPS"
                android:textSize="30sp" />
        </TableRow>


        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/ivPhaseIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phase_icon"
                android:layout_gravity="center|start"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tvPhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="PHASE"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/ivDistanceIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/total_distance_icon"
                android:layout_gravity="center|start"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE"
                android:layout_gravity="center|start"
                android:textSize="30sp"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>