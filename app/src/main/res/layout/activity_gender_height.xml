<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background_blue"
tools:context="se.kth.projectarbor.project_arbor.GenderHeightActivity"
    android:padding="15dp"
    style="@style/AppTheme.NoActionBar">

<ImageView
    android:id="@+id/whiteRectangle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    app:srcCompat="@drawable/white_box" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignLeft="@+id/whiteRectangle"
    android:layout_alignStart="@+id/whiteRectangle"
    android:layout_alignTop="@+id/whiteRectangle"
    android:layout_alignRight="@+id/whiteRectangle"
    android:layout_alignEnd="@+id/whiteRectangle"
    android:layout_alignBottom="@+id/whiteRectangle"
    android:paddingTop="25dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingBottom="25dp">


    <TextView
        android:id="@+id/heightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-light"
        android:text="Height"
        android:textColor="@color/text_grey"
        android:textSize="44sp" />

    <RelativeLayout
        android:id="@+id/heightPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heightTitle"
        android:layout_marginBottom="15dp"
        >
        <se.kth.projectarbor.project_arbor.NumberPicker
            android:id="@+id/heightMeter"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/text_grey"
            android:textSize="30sp"
            android:layout_toRightOf="@id/heightMeter"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            />

        <se.kth.projectarbor.project_arbor.NumberPicker
            android:id="@+id/heightCM"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/meter"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/centimeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cm"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/text_grey"
            android:textSize="30sp"
            android:layout_toRightOf="@id/heightCM"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/genderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Gender"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/text_grey"
        android:textSize="44sp"
        android:layout_below="@id/heightPicker"
        android:layout_marginBottom="15dp"/>

    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderTitle"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/saveHeightGenderBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:background="@color/arbor_blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
</RelativeLayout>