<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableRow>

            <Button

                android:id="@+id/btnAbout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/about"
                android:onClick="goToAbout"
                android:layout_weight="1" />

        </TableRow>

        <TableRow>
            <Button

                android:id="@+id/btnHowToPlay"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/how_to_play"
                android:onClick="goToHowToPlay"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow>
            <Button

                android:id="@+id/btnGenderAndHeight"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="@string/gender_and_height"
                android:onClick="goToGenderHeight"
                android:layout_weight="1"/>

        </TableRow>

    <TableRow>


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/NO_SOUND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:onClick="soundZERO"
            android:text=" SOUND 0%   " />




        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/SOME_SOUND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="soundFIFTY"
            android:text="SOUND 50%" />


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/LOUD_SOUND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="soundHUNDRED"
            android:text="SOUND 100%" />
    </TableRow>


</TableLayout>



