<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/sessionView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="se.kth.projectarbor.project_arbor.TreeTab"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/sessionBox"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/rounded_corners"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sessionBox"
        android:layout_alignLeft="@id/sessionBox"
        android:layout_alignStart="@id/sessionBox"
        android:layout_alignTop="@id/sessionBox"
        android:layout_alignEnd="@id/sessionBox"
        android:layout_alignRight="@id/sessionBox"
        android:padding="15dp">


        <TextView
            android:id="@+id/stepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:text="Steps"
            android:textColor="@color/colorBlack"
            android:textColorHighlight="@color/colorWhite"
            android:textSize="20sp"
            android:typeface="serif"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvStepCount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:text="0"
            android:textSize="20sp"
            android:layout_toRightOf="@id/stepTitle"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/distanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:fontFamily="sans-serif"
            android:text="Distance"
            android:textColor="@color/colorBlack"
            android:textColorHighlight="@color/colorWhite"
            android:textSize="20sp"
            android:layout_below="@id/stepTitle"/>

        <TextView
            android:id="@+id/tvDistance"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:text="0 km"
            android:textSize="20sp"
            android:layout_below="@id/tvStepCount"
            android:layout_toRightOf="@id/distanceTitle"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</RelativeLayout>
