<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kth.projectarbor.project_arbor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_a"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_a"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TreeGame"
            android:screenOrientation="portrait"></activity>

        <service
            android:name=".MainService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".MainUIActivity"
            android:label="@string/title_activity_main_ui"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NewTreeActivity"
            android:label="New Tree"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>